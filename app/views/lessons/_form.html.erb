<%= render :partial => 'layouts/errors', :locals => {:object => @lesson} %>
<%= form_for @lesson do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :number, 'Lesson number' %>
  <%= f.text_field :number %>
  <%= f.label :body, "Body (use HTML)" %>
  <%= f.text_area :body %>
  <%= f.label :section %>
  <%= f.select :section_id, options_from_collection_for_select(sections, :id, :name, @lesson.section_id) %>
  <%= f.label(:public, :class => "checkbox") do %>
    <%= f.check_box :public %>
    Public
  <% end %>
  <%= f.submit "Save", :class => "btn btn-primary" %>
<% end %>
